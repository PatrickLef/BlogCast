<% if post.comments.count == 0 %>
<%= link_to t('post.comment.create'), post_path(post, :anchor => "comments") %>
<% else %>
<%= link_to pluralize(post.comments.count, t('post.comment.comment')), post_path(post, :anchor => "comments") %> 
<%= t('post.comment.last_by') %> <%= post.comments.all.last.name %>
<% end %>